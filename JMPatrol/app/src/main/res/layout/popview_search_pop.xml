<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/selector_searchview"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edit_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:background="#00000000"
                android:drawableLeft="@drawable/view_search"
                android:drawablePadding="10dp"
                android:hint="请输入关键字"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/content_font_size_level_1"/>
        </LinearLayout>
    </FrameLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="200.0dip"
        android:background="@color/website_bg"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10">
    </ListView>
    <TextView
        android:id="@+id/tv_no_patrol_bus_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/website_bg"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:gravity="center"
        android:visibility="gone"
        android:paddingTop="5dp"
        android:textSize="@dimen/content_font_size_level_1"
        android:text="@string/no_patrol_bus_infos"/>


</LinearLayout>