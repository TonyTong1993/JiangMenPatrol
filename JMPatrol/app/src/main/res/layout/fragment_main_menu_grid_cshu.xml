<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/content_background">

    <com.ecity.cswatersupply.ui.widght.CustomTitleView
        android:id="@+id/customTitleView"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_title_height"></com.ecity.cswatersupply.ui.widght.CustomTitleView>


    <LinearLayout
        android:id="@+id/re_title_below"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/customTitleView"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/title_below_parent1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/title_below_img1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="2dp"
                android:contentDescription="@null"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingTop="15dp"
                android:src="@drawable/csico1" />

            <TextView
                android:id="@+id/title_below_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫一扫"
                android:textColor="@color/black"
                android:textSize="16sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_below_parent2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/title_below_img2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="2dp"
                android:contentDescription="@null"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingTop="15dp"
                android:src="@drawable/csico2" />

            <TextView
                android:id="@+id/title_below_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部工程"
                android:textColor="#ff333333"
                android:textSize="16sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_below_parent3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/title_below_img3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="2dp"
                android:contentDescription="@null"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingTop="15dp"
                android:src="@drawable/csico3" />

            <TextView
                android:id="@+id/title_below_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在建工程"
                android:textColor="#ff333333"
                android:textSize="16sp"></TextView>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_title_img"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_below="@id/customTitleView"
        android:scaleType="centerCrop"
        android:src="@drawable/main_title_img"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_title_below">

        <LinearLayout
            android:id="@+id/ll_menu_contents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<include layout="@layout/gridview_fill_info_csgc"></include>-->

        </LinearLayout>
    </ScrollView>
</RelativeLayout>