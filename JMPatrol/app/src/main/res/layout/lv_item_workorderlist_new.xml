<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >


    <com.ecity.cswatersupply.workorder.widght.WorkOrderListItemCustomView
        android:id="@+id/view_list_item_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.ecity.cswatersupply.workorder.widght.WorkOrderListItemCustomView>

    <com.ecity.cswatersupply.workorder.widght.WorkOrderListItemBtnsView
        android:id="@+id/view_list_item_btns"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:layout_below="@id/view_list_item_custom" >
    </com.ecity.cswatersupply.workorder.widght.WorkOrderListItemBtnsView>

    <LinearLayout
        android:id="@+id/linear_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/view_list_item_btns"
        android:layout_marginTop="10dp"
        android:background="@color/gainsboro"
        android:orientation="vertical"
        android:visibility="visible" >

    </LinearLayout>

</RelativeLayout>