<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >

    <ImageView
        android:id="@+id/iv_eventype_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/margin_spacing_level_6"
        android:contentDescription="@string/event_report_type_list_item_image"
        android:src="@drawable/event_icon_construction" />

    <TextView
        android:id="@+id/iv_eventype_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_spacing_level_4"
        android:layout_toRightOf="@id/iv_eventype_image"
        android:text="施工场地上报"
        android:textSize="23sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_spacing_level_4"
        android:layout_toRightOf="@id/iv_eventype_image"
        android:background="@color/text_lightGray" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_spacing_level_6"
        android:contentDescription="@string/event_report_type_list_item_arrow"
        android:src="@drawable/arrow_right" />

</RelativeLayout>