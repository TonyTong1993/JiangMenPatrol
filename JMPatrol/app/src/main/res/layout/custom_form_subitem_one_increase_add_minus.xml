<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/selector_workorder_material_list_bg"
    android:padding="1dip" >

    <TextView
        android:id="@+id/tv_increase_value_left"
        android:layout_width="0dip"
        android:layout_height="@dimen/margin_36"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/black_text"
        android:textSize="@dimen/font_16" />

    <LinearLayout
        android:id="@+id/ll_add_minus"
        android:layout_width="0dip"
        android:layout_height="@dimen/margin_36"
        android:layout_weight="1"
        android:paddingLeft="5dip"
        android:paddingRight="0dip"
        android:gravity="center_vertical"
        android:weightSum="4" >

        <TextView
            android:id="@+id/tv_minus"
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_32"
            android:layout_weight="0.9"
            android:background="@drawable/css_selector_minus_btn_bg"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />

        <EditText
            android:id="@+id/et_value"
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_32"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_weight="2"
            android:background="@drawable/default_input_edit"
            android:hint="@string/str_clickinput"
            android:inputType="numberDecimal"/>

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_32"
            android:layout_weight="0.9"
            android:background="@drawable/css_selector_add_btn_bg"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

</LinearLayout>