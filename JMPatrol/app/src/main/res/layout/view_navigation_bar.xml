<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="46dip"
    android:layout_gravity="top"
    android:background="@color/blue_normal" >

    <ImageButton
        android:id="@+id/ibtn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/css_button_top_left"
        android:contentDescription="@null"
        android:onClick="onBackButtonClicked" />

    <com.zzz.ecity.android.applibrary.view.grantland.widget.AutofitTextView
        android:id="@+id/tv_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/white_theme_1"
        android:textSize="@dimen/title_font_size_1"
        android:textStyle="bold"
        autofit:minTextSize="@dimen/title_font_size_5" />

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:clickable="true"
        android:onClick="onActionButtonClicked"
        android:textColor="@color/white_theme_1"
        android:textSize="@dimen/title_font_size_2"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.zzz.ecity.android.applibrary.view.CircleImageView
        android:id="@+id/btn_more"
        android:layout_width="@dimen/margin_32"
        android:layout_height="@dimen/margin_32"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:onClick="onMoreButtonClicked"
        android:src="@drawable/icon_more"
        android:visibility="gone"
        app:border_color="@color/transparent"
        app:border_width="0dp" />

</RelativeLayout>