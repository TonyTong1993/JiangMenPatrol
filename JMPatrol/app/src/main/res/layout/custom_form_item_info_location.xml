<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <include
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            layout="@layout/custom_form_item_title"
            android:background="@drawable/shape_default_input_normal" />

        <Button
            android:id="@+id/refresh"
            android:layout_width="@dimen/margin_80"
            android:layout_height="@dimen/margin_36"
            android:layout_gravity = "center_vertical"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_18"
            android:textColor="@color/blue_theme_3"
            android:background="@drawable/shape_rect_blue"
            android:text="@string/event_btn_refresh"/>
    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        layout="@layout/item_splitline_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_90"
        android:background="@drawable/shape_default_input_normal"
        android:orientation="vertical" >

        <include
            android:id="@+id/ll_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            layout="@layout/custom_form_item_info_location_text"
            android:background="@drawable/shape_default_input_normal" />

        <include
            android:id="@+id/ll_accuracy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            layout="@layout/custom_form_item_info_location_text"
            android:background="@drawable/shape_default_input_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:orientation="horizontal">

            <include
                android:id="@+id/ll_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight = "1"
                layout="@layout/custom_form_item_info_location_text"
                android:background="@drawable/shape_default_input_normal" />

            <include
                android:id="@+id/ll_lon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight = "1"
                layout="@layout/custom_form_item_info_location_text"
                android:background="@drawable/shape_default_input_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:orientation="horizontal">

            <include
                android:id="@+id/ll_y"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight = "1"
                layout="@layout/custom_form_item_info_location_text"
                android:background="@drawable/shape_default_input_normal" />

            <include
                android:id="@+id/ll_lat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight = "1"
                layout="@layout/custom_form_item_info_location_text"
                android:background="@drawable/shape_default_input_normal" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="15dip"
        layout="@layout/item_splitline_h" />

</LinearLayout>