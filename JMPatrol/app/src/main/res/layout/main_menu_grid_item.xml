<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_item_parent"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:gravity="center" >

    <ImageView
        android:id="@+id/main_menu_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="12sp"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/main_menu_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_menu_item_icon"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name_cswatersupply"
        android:textColor="#ff333333"
        android:textSize="18sp" >
    </TextView>

    <TextView
        android:id="@+id/main_menu_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:minWidth="25dip"
        android:textColor="@color/content_background"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>