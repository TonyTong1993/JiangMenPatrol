<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:clickable="false" >

    <ImageView 
        android:id="@+id/layer_icon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scaleType="centerInside"
        android:contentDescription="@null"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/margin_spacing_level_10"
        android:layout_marginLeft="@dimen/margin_4"
        android:layout_marginRight="@dimen/margin_4" />

    <TextView 
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/layer_icon"
        android:layout_marginRight="@dimen/margin_4"
        android:layout_marginTop="@dimen/margin_spacing_level_10"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/title_font_size_6" />

    <TextView 
        android:id="@+id/status_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_4"
        android:layout_marginTop="@dimen/margin_spacing_level_10"
        android:layout_marginLeft="@dimen/margin_4"
        android:layout_toRightOf="@id/status"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/red"
        android:textSize="@dimen/title_font_size_6" />

    <ToggleButton
        android:id="@+id/tv_loadType"
        android:layout_width="@dimen/margin_80"
        android:layout_height="@dimen/margin_30"
        android:layout_alignParentRight="true"
        android:background="@drawable/togglebutton_selector"
        android:textOff=""
        android:textOn="" />

</RelativeLayout>
