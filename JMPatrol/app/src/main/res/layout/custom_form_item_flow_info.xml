<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:id="@+id/ll_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4" >

            <TextView
                android:id="@+id/tv_flow_addtime"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/red"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/txt_black_normal"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tv_flow_type"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/blue"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/txt_black_normal"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll_first"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="4" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.8" 
                android:weightSum="1.8">

                <TextView
                    android:id="@+id/tv_flow_addman_title"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/red"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/title_workorder_detail_flow_addman"
                    android:textColor="@color/txt_black_normal"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_flow_addman_detail"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/txt_black_normal"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7" 
                android:weightSum="0.7">

                <TextView
                    android:id="@+id/tv_flow_state_title"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.2"
                    android:background="@color/yellow"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/title_workorder_detail_flow_state"
                    android:textColor="@color/txt_black_normal"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_flow_state_detail"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/red"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/txt_black_normal"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        layout="@layout/item_splitline_h" />

</LinearLayout>