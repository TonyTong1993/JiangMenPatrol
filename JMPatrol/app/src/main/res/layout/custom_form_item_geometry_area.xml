<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_item_star"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_50"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="@string/star_required_mark"
        android:textColor="#FF0000"
        android:textSize="@dimen/font_18" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_50"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        android:text="施工区域"
        android:textColor="@color/txt_label"
        android:textSize="@dimen/font_18" />

    <RelativeLayout
        android:id="@+id/rl_set_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_isset"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_50"
            android:gravity="center_vertical"
            android:text="@string/not_set_geometry_area"
            android:textSize="@dimen/font_18" />

        <ImageView
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_6"
            android:layout_toRightOf="@id/tv_isset"
            android:src="@drawable/map_location" />
    </RelativeLayout>

</LinearLayout>