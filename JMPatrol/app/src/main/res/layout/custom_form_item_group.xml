<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/custom_form_item_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/tv_group_value_left"
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_50"
            android:layout_weight="1"
            android:background="@drawable/shape_textview_background"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/txt_label"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/tv_group_value_right"
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_50"
            android:layout_weight="1"
            android:background="@drawable/shape_textview_background"
            android:drawableEnd="@drawable/img_arrow"
            android:drawableRight="@drawable/img_arrow"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/txt_black_normal"
            android:textSize="@dimen/font_18" />
    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        layout="@layout/item_splitline_h" />
</LinearLayout>