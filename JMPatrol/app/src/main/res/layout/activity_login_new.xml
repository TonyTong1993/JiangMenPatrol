<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/new_login_bg"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/iv_title_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@mipmap/icon_login_welcome"/>

        <LinearLayout
            android:id="@+id/ll_user_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/iv_title_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle_login_bg"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/login_user_name_input"
                android:paddingLeft="@dimen/layout_vertical_margin_10dp"
                android:paddingRight="@dimen/layout_vertical_margin_10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/font_17"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/ll_user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_login_bg"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/login_pwd_input"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/layout_vertical_margin_10dp"
                android:paddingRight="@dimen/layout_vertical_margin_10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/font_17"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_pwd"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <!-- <ImageView
                 android:id="@+id/ck_state_iamge"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:src="@drawable/login_check_selector" />-->
            <CheckBox
                android:id="@+id/ck_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@drawable/login_check_selector"
                android:gravity="center_vertical"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="记住密码"
                android:textColor="@color/white"
                android:textSize="@dimen/font_17"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_location_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll_pwd"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:drawableLeft="@mipmap/icon_setting"
            android:drawablePadding="@dimen/margin_10"
            android:gravity="center_vertical"
            android:text="定位方式"
            android:visibility="gone"
            android:onClick="onLoginSettingBtnClicked"
            android:textColor="@color/white"
            android:textSize="@dimen/font_17"/>

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_location_method"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:layout_alignLeft="@id/tv_location_method"
            android:drawableLeft="@mipmap/icon_setting"
            android:drawablePadding="@dimen/margin_10"
            android:gravity="center_vertical"
            android:text="登录设置"
            android:visibility="gone"
            android:onClick="onLoginSettingBtnClicked"
            android:textColor="@color/white"
            android:textSize="@dimen/font_17"/>

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/ll_checkbox"
            android:layout_marginTop="35dp"
            android:background="@drawable/rectangle_login_btn_bg"
            android:text="@string/btn_login"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_ok"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="V1.0.0"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_version"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="异常上报"
            android:visibility="gone"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>