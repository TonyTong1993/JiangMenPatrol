<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingEnd="0dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingStart="0dip" >

        <include
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_50"
            android:layout_weight="1.5"
            layout="@layout/custom_form_item_title_new" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_weight="3"
            android:layout_height="@dimen/margin_50" >
            <Button
                android:id="@+id/view_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:background="@drawable/shape_default_input_normal"
                android:gravity="center_vertical"
                android:paddingEnd="0dip"
                android:paddingLeft="0dip"
                android:paddingRight="0dip"
                android:paddingStart="0dip"
                android:hint="@string/hint_choose"
                android:textColor="@color/txt_label"
                android:singleLine="true"
                android:textSize="@dimen/font_18" />

            <ImageView
                android:id="@+id/iv_spn_value"
                android:layout_width="@dimen/margin_40"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/img_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        layout="@layout/item_splitline_h" />

</LinearLayout>