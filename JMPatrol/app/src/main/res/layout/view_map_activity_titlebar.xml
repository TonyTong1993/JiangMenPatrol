<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <ImageButton
        android:id="@+id/ibtn_ac_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_button_title_back"
        android:contentDescription="@null"
        android:onClick="onBackButtonClicked"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_ac_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" 
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingRight="3dp"
        android:paddingEnd="3dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingTop="3dp"
        android:singleLine="true"
        android:textColor="@color/white_theme_1"
        android:textSize="@dimen/title_font_size_1" />

    <ImageButton
        android:id="@+id/ibtn_query_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="50dip"
        android:layout_marginRight="50dip"
        android:background="@drawable/selector_button_map_fragment_search"
        android:contentDescription="@null"
        android:onClick="onSearchBtnClicked"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/ibtn_ac_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_button_map_fragment_opretor"
        android:contentDescription="@null"
        android:onClick="onActionButtonClickedForMap"
        android:visibility="gone" />
      <TextView
        android:id="@+id/btn_action_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@null"
        android:text="@string/ok"
        android:textSize="17sp"
        android:textColor="@color/content_background"
        android:onClick="onActionButtonClickedForMap"
        android:visibility="gone" />
</merge>