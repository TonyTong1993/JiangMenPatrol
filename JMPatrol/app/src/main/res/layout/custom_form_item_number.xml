<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingEnd="0dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingStart="0dip" >

        <include
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            layout="@layout/custom_form_item_title_new" />

        <EditText
            android:id="@+id/et_item_value_number"
            android:layout_width="0dip"
            android:layout_height="@dimen/margin_50"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dip"
            android:layout_marginStart="14dip"
            android:layout_weight="1.5"
            android:background="@drawable/shape_default_input_normal"
            android:gravity="center_vertical"
            android:inputType="number" 
            android:digits="0123456789"
            android:maxLength="10"
            android:textColor="@color/txt_black_normal"
            android:textColorHint="@color/txt_hint"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/txt_black_normal"
            android:textSize="@dimen/font_18"
            android:visibility="gone" />
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        layout="@layout/item_splitline_h" />

</LinearLayout>