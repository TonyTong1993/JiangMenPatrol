<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/line_flag"
        android:layout_width="30dp"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue" />
    
    <TextView
        android:id="@+id/line_ststus_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/line_flag"
        android:layout_toEndOf="@id/line_flag"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/plan_line"
        android:textColor="#ff000000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/line_ststus_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/line_ststus_txt"
        android:layout_toEndOf="@id/line_ststus_txt"
        android:text="100.000公里"
        android:textColor="@color/blue"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textSize="17sp" />

    <ToggleButton
        android:id="@+id/line_ststus_loadType"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/togglebutton_selector"
        android:checked="true"
        android:textOff=""
        android:textOn="" />

</RelativeLayout>