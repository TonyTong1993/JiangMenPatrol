<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_tree_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="@color/whitesmoke"
    android:gravity="center"
    android:minHeight="50dip"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/whitesmoke"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/tree_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@null"
            android:src="@drawable/arrow_right" />

        <CheckBox
            android:id="@+id/tree_cbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dip"
            android:layout_marginRight="15dip"
            android:gravity="center"
            android:background="@drawable/css_selector_workorder_material_checkbox"
            android:button="@null" />

        <TextView
            android:id="@+id/tree_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tree_cbox"
            android:layout_toEndOf="@id/tree_icon"
            android:layout_toRightOf="@+id/tree_icon"
            android:text="@string/hello_world"
            android:textSize="18sp" />

    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        layout="@layout/item_splitline_h" />

</LinearLayout>