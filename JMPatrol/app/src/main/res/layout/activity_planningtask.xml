<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_menu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/list_background"
    android:orientation="vertical" >

    <com.ecity.cswatersupply.ui.widght.CustomTitleView
        android:id="@+id/customTitleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height" >
    </com.ecity.cswatersupply.ui.widght.CustomTitleView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.lee.pullrefresh.ui.PullToRefreshListView
            android:id="@+id/lv_container"
            style="@style/tasklist_list_common"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </com.lee.pullrefresh.ui.PullToRefreshListView>

        <TextView
            android:id="@+id/tv_status_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/content_font_size_level_1"
            android:background="@color/orangetrans"
            android:gravity="center" />

    </FrameLayout>
</LinearLayout>