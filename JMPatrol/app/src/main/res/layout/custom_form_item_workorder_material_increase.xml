<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/lv_can_add_item"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1" >
    </ListView>
    <include
        android:layout_width="match_parent"
        android:layout_height="1dip"
        layout="@layout/item_splitline_h" />
    <Button 
        android:id="@+id/btn_add_material"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/selector_bt_bg"
        android:onClick="onAddMaterial"
        android:text="@string/workorder_finish_material_title"
        android:textColor="@color/white_text"
        android:textSize="@dimen/font_18"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="1dip"
        layout="@layout/item_splitline_h" />

    <include
        layout="@layout/custom_form_item_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_marginLeft="@dimen/margin_10"
        android:background="@drawable/shape_default_input_normal" />

    <include
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        layout="@layout/item_splitline_bold" />

    <EditText
        android:id="@+id/et_item_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_default_input_normal"
        android:gravity="start"
        android:hint="@string/str_clickinput"
        android:inputType="textMultiLine"
        android:paddingBottom="10dip"
        android:paddingLeft="15dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:minHeight="@dimen/margin_80"
        android:textColor="@color/txt_black_normal"
        android:textColorHint="@color/txt_hint"
        android:textSize="@dimen/font_18" />

    <include
        android:layout_width="match_parent"
        android:layout_height="15dip"
        layout="@layout/item_splitline_h" />
</LinearLayout>