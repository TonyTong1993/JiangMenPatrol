    <style name="Theme.TabPageIndicatorEmergency" parent="android:Theme.Holo.Light">
        <item name="vpiTabPageIndicatorStyle">@style/EmergencyWidget.TabPageIndicator</item>
        <item name="android:windowNoTitle">true</item>  
        <item name="android:animationDuration">5000</item>
        <item name="android:windowContentOverlay">@null</item>  
