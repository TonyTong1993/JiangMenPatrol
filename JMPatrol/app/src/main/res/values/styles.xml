        <item name="android:maxLines">1</item>
    </style>

    <style name="EmergencyTextAppearance.TabPageIndicator" parent="Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@style/MyTabPageIndicator.Text</item>
    </style>

