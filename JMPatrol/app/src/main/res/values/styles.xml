<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Text" />

    <style name="Text.primaryWitheTitle" parent="@style/Text">
        <item name="android:textSize">@dimen/title_font_size_2</item>
        <item name="android:textColor">@color/white_theme_1</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/showpopwin</item>
        <item name="android:windowExitAnimation">@anim/dismisspopwin</item>
    </style>

    <style name="workorder_more_btn_popup_tophalf_anim">
        <item name="android:windowEnterAnimation">@anim/scale_right_top_in</item>
        <item name="android:windowExitAnimation">@anim/scale_right_top_out</item>
    </style>

    <style name="workorder_more_btn_popup_bottomhalf_anim">
        <item name="android:windowEnterAnimation">@anim/scale_right_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/scale_right_bottom_out</item>
    </style>

    <style name="tasklist_list_common">
        <item name="android:background">@color/list_background</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">20dp</item>
    </style>
    
    <style name="tasklist_list_min">
        <item name="android:background">@color/list_background</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    
     <style name="tasklist_list_common_large">
        <item name="android:background">@color/list_background</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <!-- 通用列表风格 -->
    <style name="common_list">
        <item name="android:background">@color/list_background</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:listSelector">@drawable/taskitem_bg_selector</item>
    </style>

    <!-- 多布局列表通用风格 -->
    <style name="multiple_type_list">
        <item name="android:background">@color/transparent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="tasklist_padding">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">20dip</item>
        <item name="android:paddingBottom">20dip</item>
    </style>

    <style name="tasklist_item_padding">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingBottom">12dip</item>
    </style>

    <style name="common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="layercontrolwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/status_bar_in</item>
        <item name="android:windowExitAnimation">@anim/status_bar_out</item>
    </style>

    <!-- lv_item_planningtask -->
    <style name="item_ll_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="item_textview_des_styles">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">@dimen/title_font_size_2</item>
    </style>

    <style name="item_textview_content_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/title_font_size_2</item>
    </style>

    <style name="item_planningtask_check_item_ll_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="Theme.TabPageIndicatorDefaults" parent="android:Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="vpiTabPageIndicatorStyle">@style/MyTabPageIndicator</item>
        <item name="vpiTabTextStyle">@style/MyTabPageIndicator.Text</item>
    </style>
    <style name="MyTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/selector_tab_indicator</item>
        <item name="android:dividerPadding">8dp</item>  
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    <style name="MyTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@drawable/selector_indicator_tabtext</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">monospace</item> 
    </style>
    <style name="Theme.MainScreenTabPageIndicator" parent="android:Theme.Holo.Light">
        <item name="vpiTabPageIndicatorStyle">@style/MainScreenTabPageIndicator</item>
        <item name="vpiTabTextStyle">@style/MainScreenTabPageIndicator.Text</item>
    </style>

    <style name="MainScreenTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:dividerPadding">5dp</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/main_tab_text</item>
    </style>

    <style name="MainScreenTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="StyleProgressBarMini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">18dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_mini</item>
    </style>
     <style name="item_textview_rate_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_font_size_2</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>
    <style name="popup_tophalf_anim">
        <item name="android:windowEnterAnimation">@anim/scale_right_top_in</item>
        <item name="android:windowExitAnimation">@anim/scale_right_top_out</item>
    </style>

    <style name="popup_bottomhalf_anim">
        <item name="android:windowEnterAnimation">@anim/scale_right_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/scale_right_bottom_out</item>
    </style>
    
    <style name="layercontrol_list_style">
