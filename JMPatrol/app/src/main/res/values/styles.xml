        <item name="android:cacheColorHint">#ffffffff</item>
        <item name="android:divider">@drawable/dividing_lines</item>
        <item name="android:dividerHeight">1dip</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:fadingEdge">none</item>
    </style>
    
    <style name="item_textview_earthquake_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
