<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="0dp"
        android:left="1dp"
        android:right="1dip"
        android:top="1dp">
        <shape>
            <solid android:color="@color/transparent" />

            <stroke
                android:width="1dip"
                android:color="#d0d0d0" />
        </shape>
    </item>
    
    <item
        android:bottom="0.5dp"
        android:left="0dp"
        android:right="0dip"
        android:top="0dp">
        <shape>
            <solid android:color="@color/transparent" />
        </shape>
    </item>

</layer-list>