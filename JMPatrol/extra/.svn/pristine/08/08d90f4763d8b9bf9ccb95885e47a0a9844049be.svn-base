<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="#00ffffff"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/css_searchbar" >

        <EditText
            android:id="@+id/edtv_searchword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="#00ffffff"
            android:hint=""
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:inputType="text"  
            android:drawableRight="@drawable/icon_btn_search" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_layerManage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/css_button_layer" />

    <Button
        android:id="@+id/btn_toolbox"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/css_button_toolbox" />

</LinearLayout>