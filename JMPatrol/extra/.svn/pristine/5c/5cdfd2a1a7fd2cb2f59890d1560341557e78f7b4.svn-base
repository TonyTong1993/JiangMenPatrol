package com.wjk.tableview.model;

import android.graphics.Typeface;

/**
 * Created by zhengzhuanzi on 2017/8/16.
 */

public class TableDataConfig {
    //文字大小
    public float textSize = 16;
    //左边距
    public int paddingLeft = 20;
    //上边距
    public int paddingTop = 15;
    //右边距
    public int paddingRight = 20;
    //下边距
    public int paddingBottom = 15;
    //文字类型
    public int typeface = Typeface.NORMAL;
    //文字颜色
    public int textColor = 0x99000000;
    //行背景是否交叉显示
    public boolean showCrossRow = true;
    //显示表格分割线
    public boolean showTableGrid = true;
    //关键字颜色
    public int keyColor = 0xff288ef0;
    //链接字颜色
    public int linkColor = 0xff288ef0;
}
