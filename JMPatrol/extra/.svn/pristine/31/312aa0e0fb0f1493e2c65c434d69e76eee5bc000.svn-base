<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" 
                android:endColor="@color/transparent_fill" 
                android:startColor="@color/transparent_fill" />

            <corners android:bottomLeftRadius="2dip" 
                android:bottomRightRadius="2dip" 
                android:topLeftRadius="2dip" 
                android:topRightRadius="2dip" />
        </shape></item>

    <!-- focus -->
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" 
                android:endColor="@color/transparent_fill" 
                android:startColor="@color/transparent_fill" />

            <corners android:bottomLeftRadius="2dip" 
                android:bottomRightRadius="2dip" 
                android:topLeftRadius="2dip" 
                android:topRightRadius="2dip" />
        </shape></item>
      
    <item><shape android:shape="rectangle">
            <solid android:color="@color/transparent_fill" />
            <stroke android:width="0.5dip"
                android:color="@color/transparent_broad"/>
             <corners android:bottomLeftRadius="2dip" 
                android:bottomRightRadius="2dip" 
                android:topLeftRadius="2dip" 
                android:topRightRadius="2dip" />
     </shape></item>
</selector>